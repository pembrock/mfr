{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'rooms' %}
{% block content %}
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Номера</h3>
                <a href="?edit=0" title="Добавить" class="btn btn-success pull-right">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
            <div class="box-body no-padding">
                <table class="table">
                    {% for value in rooms %}
                        <tr>
                            <td style="width: 10px">{{ loop.index }}.</td>
                            <td><a href="?edit={{ value.id }}">{{ value.title }}</a></td>
                            <td style="width: 10px">
                                <a href="?edit={{ value.id }}" type="button" class="btn btn-block btn-primary">Редактировать</a>
                            </td>
                            <td style="width: 10px">
                                <a href="?del={{ value.id }}" type="button" class="btn btn-block btn-danger">Удалить</a>
                                {#<button type="button" class="btn btn-block btn-danger" data-toggle="modal" data-target="#myModal" data-whatever="{{ value.id }}">#}
                                {#Удалить#}
                                {#</button>#}
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Удаление</h4>
                </div>
                <div class="modal-body">
                    Вы действительно хотите удалить выбранный отель?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                    <a href="" type="button" class="del-link btn btn-danger">Удалить</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
