{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'review' %}
{% block content %}
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Отзыв</th>
                            <th>Гостиница</th>
                            <th>Имя</th>
                            <th>E-mail</th>
                            <th>Дата</th>
                            <th>Опубликован</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for value in review %}
                        <tr>
                            <td><a href="?edit={{ value.id }}">{{ value.text|slice(0,15)|striptags }}...</a></td>
                            <td>{{ value.hotel }}</td>
                            <td>{{ value.name }}</td>
                            <td>{{ value.email }}</td>
                            <td>{{ value.date }}</td>
                            <td>{% if value.isActive == 1 %}Да{% else %}Нет{% endif %}</td>
                            <td><a href="?del={{ value.id }}" type="button" class="btn btn-block btn-danger">Удалить</a></td>
                        </tr>
                        {% endfor %}
                        </tbody>
                        <tfoot>
                        <tr>
                            <th>Отзыв</th>
                            <th>Гостиница</th>
                            <th>Имя</th>
                            <th>E-mail</th>
                            <th>Дата</th>
                            <th>Опубликован</th>
                            <th></th>
                        </tr>
                        </tfoot>
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
</div>
        </div>
    </section>
{% endblock %}
