{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'home' %}
{% block content %}
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Номера в гостинице {{ hotel.title }}</h3>
            </div>
            <div class="box-body no-padding">
                <table class="table">
                    {% for value in rooms %}
                        <tr>
                            <td style="width: 10px">{{ loop.index }}.</td>
                            <td><a href="?hid={{ hotel.id }}&rid={{ value.id }}">{{ value.title }}</a></td>
                            <td style="width: 10px">
                                <a href="?hid={{ hotel.id }}&rid={{ value.id }}" type="button" class="btn btn-block btn-primary">Редактировать</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
