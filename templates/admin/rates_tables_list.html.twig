{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'promo' %}
{% block content %}
    <div class="col-md-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Тарифные таблицы тарифа "{{ rate.title }}"</h3>
                <a href="?tid={{ tid }}&tt=0" title="Добавить" class="btn btn-success pull-right">
                    <i class="fa fa-plus"></i>
                </a>
            </div>
            <div class="box-body no-padding">
                <table class="table">
                    {% for value in tables %}
                        <tr>
                            <td style="width: 10px">{{ loop.index }}.</td>
                            <td><a href="?tid={{ tid }}&tt={{ value.id }}">{{ value.title }}</a></td>
                            <td style="width: 10px">
                                <a href="?tid={{ tid }}&tt={{ value.id }}" type="button" class="btn btn-block btn-primary">Редактировать</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}
