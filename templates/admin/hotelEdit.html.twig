{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'home' %}

{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <ol class="breadcrumb">
                <li><a href="hotels.php"><i class="fa fa-home"></i> Гостиницы</a></li>
                <li class="active">{% if hotels is defined %}{{ hotels.title }}{% else %}Новый отель{% endif %}</li>
            </ol>
            {#<h3 class="box-title">{% if hotels is defined %}{{ hotels.title }}{% else %}Новый отель{% endif %}</h3>#}
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="id" id="id" value="{% if hotels is defined %}{{ hotels.id }}{% else %}0{% endif %}">
            <div class="box-body">
                {% if error is defined  %}
                    {{ error }}
                {% endif %}
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Название</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="title" id="title" placeholder="Название" value="{% if hotels is defined %}{{ hotels.title }}{% endif %}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="description" class="col-sm-2 control-label">Описание</label>
                    <div class="col-sm-6">
                        <textarea name="description" id="editor1" rows="10" cols="80">
                            {% if hotels is defined %}{{ hotels.description }}{% endif %}
                        </textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="logo" class="col-sm-2 control-label">Логотип</label>
                    <div class="col-sm-8">
                        {% if hotels.logo is not null %}
                        <div><img src="{{ hotels.logo }}" > </div>
                        <br>
                        {% endif %}
                        <input type="file" name="logo" class="form-control" id="logo">
                    </div>
                </div>
                {% if hotels is defined %}
                <div class="form-group">

                    <div class="col-sm-2"></div>

                    <div class="col-sm-8">
                    <!-- Map box -->
                    <div class="box box-solid bg-light-blue-gradient">
                        <div class="box-header">
                            <!-- tools box -->
                            <div class="pull-right box-tools">
                                <button type="button" class="btn btn-primary btn-sm pull-right" title="Добавить" style="margin-right: 5px;" data-original-title="Развернуть">
                                    <a href="hotel2room.php?act=add&hid={{ hotels.id }}" style="text-decoration: none;"><i class="fa fa-plus" style="color:white;"></i></a></button>
                            </div>
                            <!-- /. tools -->

                            <i class="fa fa-bed"></i>

                            <h3 class="box-title">
                                Категории номеров
                            </h3>
                        </div>
                        <div class="box-body">
                            <table class="table">
                                    <tr>
                                        <td style="width: 10px">1.</td>
                                        <td>Премиум</td>
                                        <td style="width: 10px">
                                            <a href="hotel2room?act=edit&hid={{ hotels.id }}&rid={{ value.room_id }}" type="button" class="btn btn-block btn-primary">Редактировать</a>
                                        </td>
                                        <td style="width: 10px">
                                            <a href="hotel2room?act=del&hid={{ hotels.id }}&rid={{ value.room_id }}" type="button" class="btn btn-block btn-danger">Удалить</a>
                                        </td>
                                    </tr>
                            </table>
                        </div>
                        <!-- /.box-body-->
                    </div>
                    </div>
                    <!-- /.box -->
                </div>
            {% endif %}
            </div>
            <!-- /.box-body -->
            <!-- /.box-footer -->
            <div class="box-footer">
                <button type="submit" class="btn btn-success" name="save" id="save">Сохранить</button>
            </div>

        </form>
    </div>
{% endblock %}
