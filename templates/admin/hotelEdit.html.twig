{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'home' %}

{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <ol class="breadcrumb">
                <li><a href="hotels.php"><i class="fa fa-home"></i> Гостиницы</a></li>
                <li class="active">{% if hotels is defined %}{{ hotels.title }}{% else %}Новый отель{% endif %}</li>
            </ol>
        </div>
        <form class="form-horizontal" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="id" id="id" value="{% if hotels is defined %}{{ hotels.id }}{% else %}0{% endif %}">
            <div class="box-body">
                {% if error is defined  %}
                    {{ error }}
                {% endif %}
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Название</label>
                    <div class="col-sm-6">
                        <input type="text" class="form-control" name="title" id="title" placeholder="Название" value="{% if hotels is defined %}{{ hotels.title }}{% endif %}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="description" class="col-sm-2 control-label">Описание</label>
                    <div class="col-sm-6">
                        <textarea name="description" id="editor1" rows="10" cols="80">
                            {% if hotels is defined %}{{ hotels.description }}{% endif %}
                        </textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="logo" class="col-sm-2 control-label">Логотип</label>
                    <div class="col-sm-8">
                        {% if hotels.logo is not null %}
                        <div><img src="{{ hotels.logo }}" > </div>
                        <br>
                        {% endif %}
                        <input type="file" name="logo" class="form-control" id="logo">
                    </div>
                </div>
                {% if hotels is defined %}
                <div class="form-group">
                    <div class="col-sm-2"></div>
                    <div class="col-sm-8">
                    <div class="box box-solid">
                        <div class="box-header">
                            <div class="pull-right box-tools">
                                <a href="hotel2room.php?act=add&hid={{ hotels.id }}" title="Добавить" class="btn btn-success pull-right">
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                            <i class="fa fa-bed"></i>
                            <h3 class="box-title">
                                Категории номеров
                            </h3>
                        </div>
                        {% if h2r is defined %}
                        <div class="box-body">
                            <table class="table">
                                {% for value in h2r %}
                                    <tr>
                                        <td style="width: 10px">{{ loop.index }}.</td>
                                        <td>{{ value.title }}</td>
                                        <td style="width: 10px">
                                            <a href="hotel2room.php?act=edit&hid={{ value.hid }}&rid={{ value.rid }}" type="button" class="btn btn-block btn-primary">Редактировать</a>
                                        </td>
                                        <td style="width: 10px">
                                            <a href="hotel2room.php?act=del&hid={{ value.hid }}&rid={{ value.rid }}" type="button" class="btn btn-block btn-danger">Удалить</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </div>
                        {% endif %}
                    </div>
                    </div>
                </div>
            {% endif %}
            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-success" name="save" id="save">Сохранить</button>
            </div>
        </form>
    </div>
{% endblock %}
