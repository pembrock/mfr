{% extends "/admin/index.html.twig" %}
{% set menu_selected = 'reeview' %}

{% block content %}
    <div class="box box-info">
        <div class="box-header with-border">
            <ol class="breadcrumb">
                <li><a href="promo.php"><i class="fa fa-book"></i> Отзывы</a></li>
                <li class="active">{% if review is defined %}{{ review.text|slice(0,15)|striptags}}...{% endif %}</li>
            </ol>
        </div>
        <form class="form-horizontal" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="id" id="id" value="{% if review is defined %}{{ review.id }}{% else %}0{% endif %}">
            <div class="box-body">
                {% if error is defined  %}
                    {{ error }}
                {% endif %}
                <div class="form-group">
                    <label for="isActive" class="col-sm-2 control-label">Опубликовано</label>
                    <div class="col-sm-6">
                        <input type="checkbox" class="form-control-static" name="isActive" id="isActive" value="1" {% if review is defined %}{% if review.isActive == 1 %} checked {% endif %}{% endif %} style="width: 25px;">
                    </div>
                </div>
                <div class="form-group">
                    <label for="title" class="col-sm-2 control-label">Отзыв</label>
                    <div class="col-sm-6">

                        {{ review.text|raw }}

                    </div>
                </div>
                <div class="form-group">
                    <label for="dateRange" class="col-sm-2 control-label">Дата отзыва</label>

                    <div class="col-sm-6">
                        {{ review.date }}
                    </div>
                    <!-- /.input group -->
                </div>
                <div class="form-group">
                    <label for="dateRange" class="col-sm-2 control-label">Имя</label>

                    <div class="col-sm-6">
                        {{ review.name }}
                    </div>
                    <!-- /.input group -->
                </div>
                <div class="form-group">
                    <label for="dateRange" class="col-sm-2 control-label">E-mail</label>

                    <div class="col-sm-6">
                        {{ review.email }}
                    </div>
                    <!-- /.input group -->
                </div>

            </div>
            <div class="box-footer">
                <button type="submit" class="btn btn-success" name="save" id="save">Сохранить</button>
            </div>
        </form>
    </div>
{% endblock %}
